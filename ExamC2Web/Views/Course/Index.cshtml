@model IEnumerable<Course>

<form method="post">


    <div>
        <tr class="border-0 text-end">
            <th  class=" border-0">
                <div class="col-12">
                    <div class="col-6">
                      <a asp-controller="Course" asp-action="Index" class="btn btn-primary text-end col-6" style="width:150px">Back to link </a>
                      <a asp-controller="Course" asp-action="AddCourse" class="btn btn-secondary"><i class="bi bi-patch-plus"></i> &ensp; Create New Course </a>
                     </div>
                </div>
        
                
            </th>
        </tr>
        <br />
        <br />
        <table id="tbl" class="table table-bordered table-striped">
            <thead>
              

                <tr class="text-dark">

                    <th>courseName</th>
                    <th>CoursePrice</th>


                </tr>
            </thead>
            <tbody>

                @foreach (var obj in Model)
                {
                    <tr>

                        <td width="40%">
                            @obj.Name
                        </td>
                        <td width="40%">
                            @obj.price
                        </td>
                        <td>
                            <a asp-controller="Course" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info mx-2">
                                <i class="bi bi-trash-fill"></i> Edit
                            </a>
                            <a asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>

                    </tr>









                }
            </tbody>
        </table>

    </div>
</form>

