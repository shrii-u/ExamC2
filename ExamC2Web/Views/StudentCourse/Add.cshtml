@model CourseVM
@{
    var student = ViewBag.student;
}

          
        
    <div class="card-body p-4">
        <form asp-action="Add" method="post" class="row">
        <input name="StudentId" value="@student" hidden />
            <div class="border p-3">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Add Course</h2>
            </div>

                <select asp-for="course.Id" asp-items="@Model.CourseList" class="form-select" required>
                    <option disabled selected>--Select Course--</option>
                </select>
             
            </div>



            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Student" asp-action="Index" class="btn btn-outline-primary border form-control ">Back to List</a>
                </div>
            </div>
        </form>
    </div>

</div>
